<mah:MetroWindow x:Class = "PPMusic.View.ShellWindow"
                 xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                 WindowStartupLocation = "CenterScreen"
                 xmlns:mah = "http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:regions = "http://prismlibrary.com/"
                 xmlns:player = "clr-namespace:PPMusic.Player"
                 mc:Ignorable = "d"
                 MinWidth = "1006"
                 MinHeight = "676"
                 TitleBarHeight="50"
                 WindowTitleBrush="White"
                 NonActiveWindowTitleBrush="White"
                 BorderThickness = "0"
                 Background = "White"
                 Title = "MainWindow"
                 Height = "450"
                 Width = "800" >


    <mah:MetroWindow.TitleTemplate>
        <DataTemplate>
            <Border Background = "White" IsHitTestVisible="False" >
                <Rectangle HorizontalAlignment="Left" Width="210" Fill="#f0f0f0"></Rectangle>
            </Border>
        </DataTemplate>
    </mah:MetroWindow.TitleTemplate>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "Auto" />
            <ColumnDefinition Width = "*" />
        </Grid.ColumnDefinitions>

        <!-- 左侧的菜单区 -->
        <Grid Background = "#f0f0f0" >
            <Grid.RowDefinitions>
                <RowDefinition Height = "Auto" />
                <RowDefinition Height = "*" />
            </Grid.RowDefinitions>

            <Image Stretch = "None"
                   Margin = "0,0,0,35"
                   Source = "../Resources/Images/Logo.png" />


            <ContentControl d:DesignWidth = "210"
                            d:DesignHeight = "450"
                            Grid.Row = "1"
                            regions:RegionManager.RegionName = "MenuRegion" />
        </Grid>

        <!-- 右侧的主内容区 -->
        <Grid Grid.Column = "1" >
            <Grid.RowDefinitions>
                <RowDefinition Height = "Auto" />
                <RowDefinition Height = "*" />
                <RowDefinition Height = "Auto" />
            </Grid.RowDefinitions>

            <!-- 搜索区 -->

            <!-- 主内容区 -->
            <mah:TransitioningContentControl Grid.Row = "1"
                Transition = "Left"
                regions:RegionManager.RegionName = "MainRegion" />

            <!-- 底部的播放控制区 -->
            <player:Player Grid.Row = "2" />

        </Grid>
    </Grid>
</mah:MetroWindow>