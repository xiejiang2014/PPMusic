                Value = "{DynamicResource PrimaryElementsDefaultForeground}" />

        <Setter Property = "ContentTemplate" >
            <Setter.Value>
                <DataTemplate>
                    <Path Width = "16"
                          Height = "16"
                          Margin = "0,0,0,0"
                          Data = "{Binding}"
                          Fill = "{Binding RelativeSource={RelativeSource Mode=FindAncestor,
